<filter>  
    <filter-name>SysLoginFilter</filter-name>  
    <filter-class>com.scnu.filter.SysLoginFilter</filter-class>  
</filter>  

<filter-mapping>  
    <filter-name>SysLoginFilter</filter-name>  
    <url-pattern>/admin/*</url-pattern>  
</filter-mapping>  
<filter-mapping>  
    <filter-name>SysLoginFilter</filter-name>  
    <url-pattern>/adminIndex.jsp</url-pattern>  
</filter-mapping> 

<filter>  
    <filter-name>CustomerLoginFilter</filter-name>  
    <filter-class>com.scnu.filter.CustomerLoginFilter</filter-class>  
</filter>  

<filter-mapping>  
    <filter-name>CustomerLoginFilter</filter-name>  
    <url-pattern>/customer/*</url-pattern>  
</filter-mapping>  

  <servlet-mapping>
    <servlet-name>SysLogin</servlet-name>
    <url-pattern>/servlet/SysLogin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginOut</servlet-name>
    <url-pattern>/servlet/LoginOut</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
